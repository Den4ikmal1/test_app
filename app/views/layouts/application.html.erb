	Language:
	<%= link_to_unless_current "English", locale: "en" %> |
	<%= link_to_unless_current "Russian", locale: "ru" %>
</div>
<div class="flasherror">

<p> <%= flash[:error]%></p>
</div>
<div class="flashsuccess">
<p> <%= flash[:success]%></p>
</div>

<%= yield %>

<div class="newitem">
</br>Menu: 
<p><%= link_to 'New item', new_item_path %> |
 <%= link_to 'Back', :back %></p>
